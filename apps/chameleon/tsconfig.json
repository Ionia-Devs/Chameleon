{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest", "node"],
    "strictNullChecks": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "../../apps/chameleon/.next/types/**/*.ts",
    "../../dist/apps/chameleon/.next/types/**/*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "../../dist/apps/chameleon/.next/types/**/*.ts",
    "../../shadcn-chat/src/app/chat.tsx",
    "../../shadcn-chat/src/app/data.tsx"
  ],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
