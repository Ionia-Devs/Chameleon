{
  "name": "chameleon",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/chameleon",
  "projectType": "application",
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["nx run chameleon:serve", "nx run chameleon:wunderctl-up"]
      }
    },
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/chameleon"
      },
      "dependsOn": ["^generate", "contentlayer", "wunderctl-generate"],
      "configurations": {
        "development": {
          "outputPath": "apps/chameleon"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "chameleon:build",
        "dev": true,
        "port": 3000
      },
      "dependsOn": ["^generate", "contentlayer"],
      "configurations": {
        "development": {
          "buildTarget": "chameleon:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "chameleon:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "chameleon:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/chameleon/jest.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "contentlayer": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/chameleon",
        "command": "contentlayer build",
        "cwd": "apps/chameleon"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/chameleon"
        },
        "production": {}
      }
    },
    "wunderctl-generate": {
      "executor": "nx:run-commands",
      "dependsOn": ["^generate"],
      "options": {
        "command": "wunderctl generate",
        "cwd": "apps/chameleon"
      }
    },
    "wunderctl-up": {
      "executor": "nx:run-commands",
      "dependsOn": ["^generate"],
      "options": {
        "command": "wunderctl up",
        "cwd": "apps/chameleon"
      }
    }
  },
  "tags": []
}
